n0emis.eu {
    bind {{ ansible_default_ipv4.address }}
    bind {{ ansible_default_ipv6.address }}

    import mon

    root /etc/coredns/zones
    file db.n0emis.eu {
        # inwx secondary ns
        import inwx
    }
}

noemis.me {
    bind {{ ansible_default_ipv4.address }}
    bind {{ ansible_default_ipv6.address }}

    import mon

    root /etc/coredns/zones
    file db.noemis.me {
        # inwx secondary ns
        import inwx
    }
}

dyn.n0emis.eu {
    bind {{ ansible_default_ipv4.address }}
    bind {{ ansible_default_ipv6.address }}

    import mon

    root /home/dyndns
    file db.dyndns.zone {
        transfer to *
    }
}

