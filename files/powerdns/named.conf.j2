options {
    directory "{{ powerdns_config_directory }}";
};

zone "n0emis.eu" IN {
    type master;
    file "zones/n0emis.eu";
};

zone "noemis.me" IN {
    type master;
    file "zones/noemis.me";
};

zone "n0emis.dn42" IN {
    type master;
    file "zones/n0emis.dn42";
};

zone "n0emis.tk" IN {
    type master;
    file "zones/n0emis.tk";
};

zone "dyn.n0emis.eu" IN {
{% if ansible_fqdn == dyndns_host %}
    type master;
{% else %}
    type slave;
    masters {
        78.46.251.132;
    };
{% endif %}
    file "zones/dyn.n0emis.eu";
};
