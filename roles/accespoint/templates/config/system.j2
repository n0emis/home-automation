config system
	option hostname '{{ ansible_hostname }}'
	option timezone 'Europe/Berlin'
	option ttylogin '0'
	option log_size '64'
	option urandom_seed '0'

config timeserver 'ntp'
	option enabled '1'
	option enable_server '0'
	list server '0.openwrt.pool.ntp.org'
	list server '1.openwrt.pool.ntp.org'
	list server '2.openwrt.pool.ntp.org'
	list server '3.openwrt.pool.ntp.org'

config led 'led_usb'
	option name 'USB LED (green)'
	option sysfs 'netgear:green:usb'
	option trigger 'none'
	option brightness '0'
	option default '0'

config led 'led_power'
	option name 'power LED (green)'
	option sysfs 'netgear:green:power'
	option trigger 'none'
	option brightness '0'
	option default '0'

config led 'led_wan'
	option name 'WAN LED (green)'
	option sysfs 'netgear:green:wan'
	option trigger 'none'
	option brightness '0'
	option default '0'

config led 'led_24g'
	option name '2.4GHz LED (yellow)'
	option sysfs 'ath9k-phy0'
	option trigger 'none'
	option brightness '0'
	option default '0'

config led 'led_5g'
	option name '5GHz LED (blue)'
	option sysfs 'ath9k-phy1'
	option trigger 'none'
	option brightness '0'
	option default '0'
